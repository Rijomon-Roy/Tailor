.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px; /* Increased side padding */
    width: 100%;
    flex: 1;
}
        /* Product Detail Section */
        .product-detail {
            display: grid;
            grid-template-columns: 1fr;
            gap: 40px;
            padding: 40px 0;
        }

        @media (min-width: 992px) {
            .product-detail {
                grid-template-columns: 1fr 1fr;
            }
        }

        .product-gallery {
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 20px;
            align-self: flex-start;
        }

        .main-image {
            width: 100%;
            height: 80vh;
            object-fit: contain;
            background-color: var(--light);
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .product-info {
            padding: 0 20px;
        }

        .product-title {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--primary);
        }

        .product-subtitle {
            font-size: 16px;
            color: var(--secondary);
            margin-bottom: 20px;
        }

        .product-price {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .tax-info {
            font-size: 14px;
            color: var(--secondary);
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border);
        }

        .size-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .size-guide {
            font-size: 14px;
            color: var(--secondary);
            text-decoration: underline;
            cursor: pointer;
        }

        .size-options {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .size-option {
            border: 1px solid var(--border);
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .size-option:hover {
            border-color: var(--primary);
        }

        .size-option.selected {
            background-color: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }

        .add-to-cart {
            background-color: var(--accent);
            color: white;
            border: none;
            padding: 14px 30px;
            border-radius: 4px;
            font-weight: 600;
            cursor: pointer;
            flex-grow: 1;
            transition: background-color 0.2s;
        }

        .add-to-cart:hover {
            background-color: #553c9a;
        }

        .add-to-cart.added {
            background-color: #4CAF50;
            cursor: not-allowed;
        }

        .buy-now {
            background-color: white;
            border: 1px solid var(--accent);
            color: var(--accent);
            padding: 14px 30px;
            border-radius: 4px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .buy-now:hover {
            background-color: var(--accent);
            color: white;
        }

        .product-description {
            font-size: 15px;
            color: var(--secondary);
            line-height: 1.7;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 30px;
            color: var(--secondary);
            text-decoration: none;
            font-size: 14px;
        }

        .back-link:hover {
