    <div class="container">
        <main class="product-detail">
            <div class="product-gallery">
                <a href="/womencollection" class="back-link">
                    <i class="fas fa-arrow-left"></i> Back to Collection
                </a>
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="main-image">
            </div>

            <div class="product-info">
                <h1 class="product-title"><%= product.name %></h1>
                <p class="product-subtitle"><%= product.category || 'Premium Collection' %></p>
                
                <div class="product-price">â‚¹<%= product.price %></div>
                
                <p class="tax-info">Inclusive of all taxes<br>(Elite Tailoring includes all applicable duties)</p>
                
                <div class="size-section">
                    <div class="section-title">
                        Select Size
                        <span class="size-guide">Size Guide</span>
                    </div>
                    <div class="size-options">
                        <div class="size-option">XS</div>
                        <div class="size-option selected">S</div>
                        <div class="size-option">M</div>
                        <div class="size-option">L</div>
                        <div class="size-option">XL</div>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button 
                        class="add-to-cart <%= isInCart ? 'added' : '' %>"
                        <%= isInCart ? 'disabled' : '' %>
                    >
                        <%= isInCart ? 'Added to Cart' : 'Add to Cart' %>
                    </button>
                    <a href="/cart" class="buy-now">Buy Now</a>
                </div>
                
                <p class="product-description">
                    <%= product.description || "Premium quality product designed for comfort and style." %>
                </p>
            </div>
        </main>
    </div>

  <!-- Already Added Modal -->
<div id="alreadyAddedModal" class="modal">
    <div class="modal-content">
        <h3>This item is already in your cart</h3>
        <p>You can view or edit your cart items from the cart page.</p>
        <button class="modal-close">OK</button>
    </div>
</div>
   

     <script>
    // Add to cart functionality with complete error handling
    document.querySelector('.add-to-cart').addEventListener('click', async function(e) {
        e.preventDefault();
        
        const button = this;
        
        // Check if already added FIRST
        if (button.classList.contains('added') || button.textContent.trim() === 'Added to Cart') {
            document.getElementById('alreadyAddedModal').style.display = 'flex';
            return;
        }
        
        // Disable button during request to prevent double clicks
        button.disabled = true;
        const originalText = button.textContent;
        button.textContent = 'Adding...';
        
        try {
            const productId = '<%= product._id %>';
            const selectedSize = document.querySelector('.size-option.selected').textContent;
            
            const response = await fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    productId,
                    size: selectedSize
                })
            });
            
            // Handle response
            let result;
            try {
                result = await response.json();
            } catch (jsonError) {
                // If JSON parsing fails but status is OK, assume success
                if (response.ok) {
                    result = { success: true };
                } else {
                    throw new Error('Failed to add to cart');
                }
            }
            
            if (result.success) {
                // Success state
                button.textContent = 'Added to Cart';
                button.classList.add('added');
                
                // Update cart count
                const cartCount = document.getElementById('cart-count');
                if (cartCount) {
                    const currentCount = parseInt(cartCount.textContent) || 0;
                    cartCount.textContent = currentCount + 1;
                }
            } else {
                // Failure state
                button.textContent = originalText;
                button.disabled = false;
                alert(result.message || 'Failed to add to cart');
            }
        } catch (error) {
            console.error('Add to cart error:', error);
            button.textContent = originalText;
            button.disabled = false;
            alert('Failed to add to cart. Please try again.');
        }
    });

    // Modal handling - MAKE SURE THESE ARE PRESENT
    document.querySelector('.modal-close').addEventListener('click', function() {
        document.getElementById('alreadyAddedModal').style.display = 'none';
    });

    window.addEventListener('click', function(event) {
        if (event.target === document.getElementById('alreadyAddedModal')) {
            document.getElementById('alreadyAddedModal').style.display = 'none';
        }
    });
</script>
</body>
