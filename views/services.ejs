<%- include("partials/navbar") %>
<style>
  .top-bar {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 30px;
  }

  .continue-shopping {
    display: flex;
    align-items: center;
    background-color: #ff9800;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s;
  }

  .continue-shopping svg {
    margin-right: 8px;
  }

  .continue-shopping:hover {
    background-color: #e68900;
  }
</style>
<section class="services-section py-5 bg-light">
  <div class="container">
    <h1 class="text-center mb-5 fw-bold">Our Tailoring Services</h1>

    <div class="row g-4">
      <div class="top-bar">
        <a href="/" class="continue-shopping">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="white"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"
            />
          </svg>
          Home
        </a>
      </div>
      <!-- Service Card 1 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Custom Stitching</h5>
            <p class="card-text">
              Get your garments tailored to perfection with our expert stitching
              services for all occasions.
            </p>
          </div>
        </div>
      </div>

      <!-- Service Card 2 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Alteration & Fitting</h5>
            <p class="card-text">
              We provide top-notch alterations and fittings to ensure your
              clothes fit you like a glove.
            </p>
          </div>
        </div>
      </div>

      <!-- Service Card 3 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Blouse & Saree Design</h5>
            <p class="card-text">
              Design stylish and trendy blouses, and get your sarees perfectly
              pleated for any event.
            </p>
          </div>
        </div>
      </div>

      <!-- Service Card 4 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Wedding Attire Tailoring</h5>
            <p class="card-text">
              Specialized tailoring services for bridal wear, groom outfits, and
              wedding party dresses.
            </p>
          </div>
        </div>
      </div>

      <!-- Service Card 5 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Kids Tailoring</h5>
            <p class="card-text">
              Comfortable and stylish clothing stitched with care for children
              of all ages.
            </p>
          </div>
        </div>
      </div>

      <!-- Service Card 6 -->
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-primary">Express Delivery</h5>
            <p class="card-text">
              Need it fast? Avail our express service for urgent tailoring with
              no compromise on quality.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mt-5">
      <a href="/appointment" class="btn btn-warning btn-lg px-4 shadow"
        >Book an Appointment</a
      >
    </div>
  </div>
</section>
